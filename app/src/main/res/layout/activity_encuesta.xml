<?xml version="1.0" encoding="utf-8"?>
<!--
  Este es un layout para la encuesta de EmprendeISTG.
  Utiliza un ScrollView para cumplir con el requisito de que toda la encuesta
  esté en una sola pantalla deslizable.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".viewModel.EncuestaFragment">

    <!--
      Usamos un LinearLayout vertical dentro del ScrollView
      para apilar todas las secciones de la encuesta.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!--
          PANTALLA 1: Bienvenida
          Esta es la sección de bienvenida.
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido a EmprendeISTG!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Queremos conocerte un poco para ofrecerte herramientas, contactos y oportunidades a tu medida."
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <!--
          PANTALLA 2: Primera Pregunta (Selección Múltiple)
          Usamos CardView para agrupar visualmente la pregunta.
          Usamos CheckBox para permitir selección múltiple.
        -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Qué te gustaría lograr con EmprendeISTG?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cb_vender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vender mis productos o servicios"/>

                <CheckBox
                    android:id="@+id/cb_comprar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comprar productos o servicios de otros emprendedores"/>

                <CheckBox
                    android:id="@+id/cb_proveedores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar proveedores para mi negocio"/>

                <CheckBox
                    android:id="@+id/cb_explorar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Explorar y conocer nuevos emprendimientos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona todas las que apliquen"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--
          PANTALLA 3: Segunda Pregunta (Ubicación)
          Usamos ChipGroup para una selección más visual
          que se parece a los botones de tu diseño.
          Puedes ajustar 'app:singleSelection' a true o false.
        -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Dónde está ubicado tu negocio o en qué zona te gustaría tener mayor alcance?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipgroup_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_duran"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durán"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_daule"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daule"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_samborondon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samborondón"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_guayaquil_norte"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guayaquil Norte"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_guayaquil_centro"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guayaquil Centro"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_guayaquil_sur"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guayaquil Sur"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_guayaquil_suburbio"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guayaquil Suburbio"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--
          PANTALLA 4: Tercera Pregunta (Categorías)
          Usamos un GridLayout para mostrar las categorías
          tal como en tu diseño.
        -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿A qué se dedica tu emprendimiento?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:useDefaultMargins="true">

                    <!-- Aquí puedes usar MaterialCardView o Button para cada item -->
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Alimentos y Bebidas" android:textSize="12sp"/>
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Ropa y Accesorios" android:textSize="12sp"/>
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Salud y Belleza" android:textSize="12sp"/>

                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Servicios Profesionales" android:textSize="12sp"/>
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Tecnología y Electrónica" android:textSize="12sp"/>
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Hogar y Decoración" android:textSize="12sp"/>

                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Manualidades y Artesanías" android:textSize="12sp"/>
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Hogar y Decoración" android:textSize="12sp"/>
                    <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_columnWeight="1" android:text="Otro" android:textSize="12sp"/>

                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--
          PANTALLA 5: Cuarta Pregunta (Cómo nos conoció)
          Usamos RadioGroup y RadioButton para selección única.
        -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Cómo conociste EmprendeISTG?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <RadioGroup
                    android:id="@+id/rg_conocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_redes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Por redes sociales"/>

                    <RadioButton
                        android:id="@+id/rb_recomendacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recomendación"/>

                    <RadioButton
                        android:id="@+id/rb_otro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Otro"/>
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--
          PANTALLA 6: Finalización
          Esta es la sección de completado.
          He puesto un botón "Continuar" al final de todo el ScrollView.
        -->

        <!--
          Puedes agregar el ícono feliz usando un ImageView.
          Asegúrate de tener un ícono en tu carpeta 'drawable'.
          Por ejemplo: android:src="@drawable/ic_happy_face"
        -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#0288D1"
            android:contentDescription="Ícono de completado"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Listo, Jennifer!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:gravity="center"
            tools:text="¡Listo, [Nombre]!"/> <!-- 'tools:text' es para vista previa -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu perfil está completo. Gracias por compartir tu información. Ahora podemos ofrecerte contenido y herramientas hechas a tu medida."
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            app:cornerRadius="8dp"
            android:paddingVertical="14dp"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</ScrollView>